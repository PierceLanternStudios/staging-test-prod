{
  "dxt_version": "0.2",
  "name": "pierces-staging-tester-mcp",
  "version": "1.0.0",
  "description": "The official MCP Server for the Pierces Staging Tester Mc Here API",
  "author": {
    "name": "Pierces Staging Tester Mc Here"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PierceLanternStudios/staging-test-prod.git"
  },
  "homepage": "https://github.com/PierceLanternStudios/staging-test-prod/tree/main/packages/mcp-server#readme",
  "server": {
    "type": "node",
    "entry_point": "index.js",
    "mcp_config": {
      "command": "node",
      "args": ["${__dirname}/index.js"],
      "env": {
        "PETSTORE_API_KEY": "${user_config.PETSTORE_API_KEY}"
      }
    }
  },
  "user_config": {
    "PETSTORE_API_KEY": {
      "title": "api_key",
      "description": "",
      "required": true,
      "type": "string"
    }
  },
  "tools": [],
  "tools_generated": true,
  "compatibility": {
    "runtimes": {
      "node": ">=18.0.0"
    }
  },
  "keywords": ["api"]
}
